
{{#partial "content"}}

<p>Content:</p>

<p>{{ name }}</p>
<p>{{ age }}</p>
<p>{{ power }}</p>
<p>{{ weakness }}</p>
<h5>Heros status:</h5>
<p>
    {{#if heroes.published }}
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Added
    {{else}}
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
    {{/if}}

</p>

{{/partial}}

{{> layout.hbs}}